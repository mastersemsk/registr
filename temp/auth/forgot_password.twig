<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <title>Востановление пароля</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sign-in.css" rel="stylesheet">
  </head>
  <body class="d-flex align-items-center py-4 bg-body-tertiary">   
<main class="form-signin w-100 m-auto">
  <form action="" method="post">
    <h1 class="h3 mb-3 fw-normal">Востановление пароля</h1>
    {% if error %}
	<div class="alert alert-danger" role="alert">
      {{ error }}
    </div>
	{% endif %}
	<input type="hidden" value="{% if code %}{{ code }}{% endif %}" name="code">
    <div class="form-floating">
      <input type="email" name="login" class="form-control" id="floatingInput" placeholder="name@example.com" value="{% if oldemail %}{{ oldemail }}{% endif %}" required autofocus>
      <label for="floatingInput">Email</label>
    </div>
     <br>
    <button class="btn btn-primary w-100 py-2" type="submit">Отправить</button>
  </form>
</main>
<script src="/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
